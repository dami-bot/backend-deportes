// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
   url      = env("DATABASE_URL")
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String   @unique
  descripcion String?
  precio      Float
  stock       Int
  imagen      String
  
  
  // Campos espec√≠ficos de Deportes (Opcionales)
  categoria   String?  
  genero      String?  
  talle       String?  
  color       String?
  isNew       Boolean  @default(false)

  
}